def map=[:]
pipeline {
    agent any
    stages {
//         stage ('从git仓库拉取代码阶段') {
//             steps{
//                 echo "----------------------从git仓库拉取代码阶段------------------"
//                 timeout(time:3, unit:'MINUTES') {
//                     git branch: 'main', credentialsId: '5c26cc66-ec4d-40aa-a261-58f29df53b76', url: 'git@github.com:metrosir/test.git'
//                 }
//             }
//         }
        stage ('debug') {
            steps {
                echo "echo map>>"
                echo "${GIT_BRANCH}:" + GIT_COMMIT
                echo "${GIT_BRANCH}:" + BUILD_TAG
                echo "echo map<<"
            }
        }
        stage ('build image') {
            steps {
                echo "----------------------生产docker镜像------------------"
                sh label:'image building', script: '/bin/sh deploy/sh/toimage.sh'
            }
        }
        stage('deploy k8s') {

           steps {
                echo "----------------------部署到k8s------------------"
                sh label:'deploy image to k8s', script: '/bin/sh deploy/sh/tok8s.sh'
           }
        }
    }

    post{
        success {
            cleanWs()
        }
    }
}


